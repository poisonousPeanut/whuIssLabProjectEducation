<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false"><shape>
        <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        <solid android:color="@color/viewfinder_mask" />
        <stroke android:width="1dp" android:color="@color/viewfinder_mask" />
    </shape>
    </item>
    <item android:state_pressed="true"><shape>
        <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        <solid android:color="@color/Carbon_Gray" />
        <stroke android:width="1dp" android:color="@color/Carbon_Gray" />
    </shape>
    </item>
    <item><shape>
        <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        <solid android:color="@color/Beer" />
        <stroke android:width="1dp" android:color="@color/viewfinder_mask" />
    </shape>
    </item>
</selector>