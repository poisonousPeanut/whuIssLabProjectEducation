            <!--android:id="@+id/tv_detail"-->
            <!--android:text="我是内容啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"-->
            <!--android:paddingLeft="20dp"-->
            <!--android:paddingBottom="20dp"-->
            <!--android:paddingRight="20dp"-->
            <!--android:textColor="@android:color/black"-->
            <!--android:textSize="22sp"-->
            <!--android:lines="4"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_discover_number"
            android:text="1人回答"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/ib_share"
            android:src="@drawable/ic_menu_share"
            android:layout_marginEnd="20dp"
            android:layout_alignBottom="@id/tv_discover_number"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/ib_answer"
            android:src="@drawable/ic_question_answer_black_24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@id/tv_discover_number"
            android:layout_toLeftOf="@id/ib_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>